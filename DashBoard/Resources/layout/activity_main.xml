<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efefef"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/black" 
            android:layout_gravity="left"
            
            />

        <androidx.cardview.widget.CardView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"            
             app:cardCornerRadius="10dp"
            android:layout_marginLeft="170dp"
                       
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/image"                
                />

        </androidx.cardview.widget.CardView>
        
    </LinearLayout>

     <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="@color/ultramarineblue"
        app:cardCornerRadius="20dp"
        android:layout_margin="15dp"> 
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"            
            >
            
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/monthtv"
                android:text="January"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
            />         
                                      
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moneytv"
                android:text="$ 500"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="40dp"                
                android:layout_below="@+id/monthtv"
            />
            <ProgressBar
                android:layout_width="270dp"
                android:layout_height="20dp"
                android:id="@+id/ProgressBar"
                android:layout_below="@+id/moneytv"
                style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
                android:progress="70"
                android:max="100"
                android:progressTint="@android:color/white"
                android:progressBackgroundTint="@android:color/white"                
                
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/statistics"
                android:layout_above="@+id/progresstv"
                android:layout_toRightOf="@+id/ProgressBar"
                android:layout_marginLeft="20dp"
                android:layout_marginVertical="10dp"
                
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progresstv"
                android:text="70%"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/ProgressBar"                
                android:layout_alignTop="@+id/ProgressBar"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spendtargettv"
                android:text="Daily Spend Target:"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:layout_below="@+id/ProgressBar"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spendmoneytv"
                android:text=" $16.67"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:layout_below="@+id/ProgressBar"
                android:layout_toRightOf="@+id/spendtargettv"
                />

        </RelativeLayout>  
    
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

         <TextView
            android:layout_width="wrap_content"           
            android:text="DAILY SPENDS"
            android:id="@+id/dailyspend"
            android:textStyle="bold"       
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            />
    
         <TextView
            android:layout_width="wrap_content"        
            android:text="See All"        
            android:textColor="@color/ultramarineblue"
            android:textStyle="bold"        
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            />

     </LinearLayout>

     <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_below="@+id/dailyspend"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/dailyspendcard"
        radius
           >

            <RelativeLayout
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:id="@+id/bankcard"
                    android:backgroundTint="#ff5e5b"
                    app:cardCornerRadius="10dp"         
                     >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bank"
                        android:id="@+id/banklogo" 
                        android:layout_marginTop="size8dp"
                        android:layout_marginLeft="size9dp"
                     />                  
                
                </androidx.cardview.widget.CardView>
               
                <TextView
                    android:text="Net Banking"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/bankcard"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/netbanking"
                    android:textColor="@android:color/black"                    
                    android:layout_height="wrap_content"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/netbanking"
                    android:text="$365.89"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@+id/bankcard"/>
               <TextView
                    android:layout_marginTop="14dp"
                    android:id="@+id/netbankprice"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#808080"
                    android:layout_height="wrap_content"
                    android:text="Today"/>

                 <androidx.cardview.widget.CardView
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:id="@+id/foodcard"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/bankcard"
                    android:backgroundTint="#FBB41B"
                    app:cardCornerRadius="10dp"
           
    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/food"
                        android:id="@+id/banklogo" 
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="9dp"
            />     
                </androidx.cardview.widget.CardView>
                 
             <TextView
                android:text="Food & Drinks"
                     android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/foodcard"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/bankcard"
                     android:layout_marginTop="10dp"
                    android:id="@+id/foodtext"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                />
                <TextView
                    android:layout_width="wrap_content"
                     android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/foodtext"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:text="$165.99"
                    android:layout_toRightOf="@+id/foodcard"/>
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#808080"
                    android:layout_below="@+id/bankcard"
                    android:layout_height="wrap_content"
                    android:text="26 Jan 2019"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:id="@+id/dresscard"
                      android:layout_marginTop="10dp"
                    android:layout_below="@+id/foodcard"
                    android:backgroundTint="#2AC999"
                    app:cardCornerRadius="10dp">
           
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dress"              
                        android:id="@+id/clothes"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="9dp"                   
                     
                    />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:text="Clothes"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/dresscard"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/foodcard"
                    android:layout_marginTop="10dp"
                    android:id="@+id/clothestext"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clothestext"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:text="$65.09"
                android:paddingBottom="20dp"
                android:layout_toRightOf="@+id/dresscard"/>
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#808080"
                    android:layout_below="@+id/foodcard"
                    android:layout_height="wrap_content"
                    android:text="15 Jan 2019"
                    />
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"> 
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/dailyspendcard"
            android:text="Wishlist"   
            android:id="@+id/wishlist"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10"/>
        <TextView
            android:layout_width="wrap_content"            
            android:text="See All"            
            android:textColor="@color/ultramarineblue"
            android:textStyle="bold"         
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            /> 

    </LinearLayout>
    
         <HorizontalScrollView
            android:layout_below="@+id/dashlayout"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:scrollbars="none"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/tshirtcard"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/foodcard"
                    android:backgroundTint="@color/ultramarineblue"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"                        
                        android:src="@drawable/t_shirt"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tee"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                       android:layout_gravity="center"
                        />
                    </LinearLayout>
                
                </androidx.cardview.widget.CardView>
                
                <androidx.cardview.widget.CardView
                    android:layout_width="size70dp"
                    android:layout_height="size70dp"
                    android:id="@+id/gymcard"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#2AC999"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        
                        android:src="@drawable/dumbell"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gym"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                       android:layout_gravity="center"
                        />
                </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/bikecard"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/foodcard"
                    android:backgroundTint="@color/colorLightYellow"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        
                        android:src="@drawable/ic_motorcycle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bike"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                       android:layout_gravity="center"
                        /></LinearLayout>
                </androidx.cardview.widget.CardView><androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/moneycard"
                    android:layout_marginLeft="10dp"
                       android:layout_marginTop="10dp"
                    android:layout_below="@+id/foodcard"
                    android:backgroundTint="@color/colorLightRed"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        
                        android:src="@drawable/ic_money"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tee"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                       android:layout_gravity="center"
                        /></LinearLayout>
                </androidx.cardview.widget.CardView><androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/dresscard"
                       android:layout_marginTop="10dp"
                    android:layout_below="@+id/foodcard"
                    android:backgroundTint="@color/darkblue"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        
                        android:src="@drawable/ic_t_shirt"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tee"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                       android:layout_gravity="center"
                        /></LinearLayout>
                </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/gymcard2"
                    android:layout_marginLeft="10dp"
                       android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorLightGreen"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        
                        android:src="@drawable/ic_dumbell"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gym"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                       android:layout_gravity="center"
                        />
                
                </LinearLayout>
                </androidx.cardview.widget.CardView>
            
        </LinearLayout>  
    
    
    </HorizontalScrollView>

</LinearLayout>